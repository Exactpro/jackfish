<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exactprosystems.jf.tool.configuration.logs.LogsController">
	<children>
		<Label text="Log file name" />
		<Label text="Logging level" GridPane.rowIndex="1" />
		<Label text="Pattern" GridPane.rowIndex="2" />
		<TextField fx:id="tfPattern" GridPane.columnIndex="1" GridPane.rowIndex="2" />
		<ComboBox fx:id="cbLevel" maxWidth="1.7976931348623157E308" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
		<BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
			<center>
				<TextField fx:id="tfLogFile" BorderPane.alignment="CENTER" />
			</center>
			<right>
				<Button fx:id="btnLogFile" mnemonicParsing="false" onAction="#chooseLogFile" text="..." BorderPane.alignment="CENTER" />
			</right>
		</BorderPane>
	</children>
	<columnConstraints>
		<ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" percentWidth="15.0" prefWidth="100.0" />
		<ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
		<ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" percentWidth="10.0" prefWidth="100.0" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
	</rowConstraints>
</GridPane>