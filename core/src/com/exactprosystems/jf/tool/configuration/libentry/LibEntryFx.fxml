<GridPane prefHeight="30.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
		  fx:controller="com.exactprosystems.jf.tool.configuration.libentry.LibEntryFxController">
	<rowConstraints>
		<RowConstraints prefHeight="30"/>
	</rowConstraints>

	<columnConstraints>
		<ColumnConstraints halignment="CENTER" percentWidth="15"/>
		<ColumnConstraints halignment="CENTER" percentWidth="65" fillWidth="true"/>
		<ColumnConstraints halignment="CENTER" percentWidth="30"/>
	</columnConstraints>

	<children>
		<Label fx:id="lblName"/>
		<BorderPane GridPane.columnIndex="1">
			<center>
				<TextField fx:id="tfPath"/>
			</center>
			<right>
				<HBox alignment="CENTER" spacing="5">
					<children>
						<Button fx:id="btnChoosePath" onAction="#chooseLibPath" text="..."/>
						<Button fx:id="btnOpenLib" onAction="#openLib" text="Open"/>
					</children>
				</HBox>
			</right>
		</BorderPane>
		<Button fx:id="btnRemoveEntry" GridPane.columnIndex="2" text="Remove entry" onAction="#removeEntry"/>
	</children>
</GridPane>
