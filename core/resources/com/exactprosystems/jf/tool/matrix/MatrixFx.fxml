<?import com.exactprosystems.jf.tool.CssVariables?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exactprosystems.jf.tool.matrix.MatrixFxController">
	<fx:define>
		<CssVariables fx:id="transparentBackground" fx:constant="TRANSPARENT_BACKGROUND"/>
	</fx:define>
	<center>
		<ScrollPane fitToHeight="true" fitToWidth="true">
			<content>
				<SplitPane fx:id="splitPane" orientation="VERTICAL" dividerPositions="0.85">
					<items>
						<GridPane fx:id="gridPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="1230.0">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
								<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0"/>
							</columnConstraints>
							<rowConstraints>
								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
								<RowConstraints minHeight="50.0" percentHeight="5.0" prefHeight="50.0" vgrow="SOMETIMES"/>
								<RowConstraints minHeight="50.0" percentHeight="7.0" prefHeight="50.0" vgrow="SOMETIMES"/>
								<RowConstraints/>
							</rowConstraints>
							<children>
								<ScrollPane fx:id="mainScrollPane" fitToHeight="true" fitToWidth="true" prefViewportHeight="519.0" prefViewportWidth="916.0" GridPane.columnSpan="2" GridPane.rowSpan="2">
									<content>
									</content>
								</ScrollPane>
								<HBox fx:id="hBox" alignment="CENTER_RIGHT" prefHeight="43.0" prefWidth="916.0" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="CENTER">
									<children>
										<Label minWidth="8"/>
										<SplitMenuButton mnemonicParsing="false" text="On/Off">
											<items>
												<MenuItem mnemonicParsing="false" onAction="#markAll" text="Switch off all"/>
												<MenuItem mnemonicParsing="false" onAction="#unmarkAll" text="Switch on all"/>
											</items>
										</SplitMenuButton>
										<Label minWidth="8"/>
										<Button id="matrixBtnFind" fx:id="btnFind" mnemonicParsing="false" onAction="#showFindPanel" styleClass="$transparentBackground"/>
										<Button id="matrixBtnWatch" fx:id="btnWatch" mnemonicParsing="false" onAction="#showWatch" styleClass="$transparentBackground">
											<tooltip>
												<Tooltip text="Open watcher"/>
											</tooltip>
										</Button>
										<ToggleButton id="matrixToggleTracing" fx:id="toggleTracing" mnemonicParsing="false" onAction="#toggleTracing" styleClass="$transparentBackground"/>
										<Button id="matrixBtnStartMatrix" fx:id="btnStartMatrix" mnemonicParsing="false" onAction="#startMatrix" styleClass="$transparentBackground"/>
										<Button id="matrixBtnStopMatrix" fx:id="btnStopMatrix" mnemonicParsing="false" onAction="#stopMatrix" styleClass="$transparentBackground"/>
										<Button id="matrixBtnPauseMatrix" fx:id="btnPauseMatrix" mnemonicParsing="false" onAction="#pauseMatrix" styleClass="$transparentBackground"/>
										<Button id="matrixBtnStepMatrix" fx:id="btnStepMatrix" mnemonicParsing="false" onAction="#stepMatrix" styleClass="$transparentBackground">
											<tooltip>
												<Tooltip text="Step matrix (Execute current item and stop on next)"/>
											</tooltip>
										</Button>
										<Button id="matrixBtnShowResult" fx:id="btnShowResult" mnemonicParsing="false" onAction="#showResult" styleClass="$transparentBackground">
											<tooltip>
												<Tooltip text="Show report for the matrix"/>
											</tooltip>
										</Button>
									</children>
									<padding>
										<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
									</padding>
								</HBox>
								<GridPane GridPane.rowIndex="2">
									<columnConstraints>
										<ColumnConstraints hgrow="SOMETIMES" maxWidth="330" minWidth="10.0" prefWidth="100.0"/>
										<ColumnConstraints hgrow="SOMETIMES" maxWidth="16.0" minWidth="0.0" percentWidth="2.0" prefWidth="0.0"/>
										<ColumnConstraints hgrow="SOMETIMES" maxWidth="313.0" minWidth="10.0" prefWidth="313.0"/>
									</columnConstraints>
									<rowConstraints>
										<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
									</rowConstraints>
									<children>
										<BorderPane prefHeight="43.0">
											<left>
												<Label text="Default app" BorderPane.alignment="CENTER">
													<padding>
														<Insets left="4.0" right="4.0"/>
													</padding>
												</Label>
											</left>
											<center>
												<ComboBox fx:id="cbDefaultApp" maxWidth="1.7976931348623157E308" onAction="#changeDefaultApp" BorderPane.alignment="CENTER_LEFT"/>
											</center>
										</BorderPane>
										<BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2">
											<center>
												<ComboBox fx:id="cbDefaultClient" maxWidth="1.7976931348623157E308" onAction="#changeDefaultClient" prefHeight="25.0" BorderPane.alignment="CENTER_LEFT"/>
											</center>
											<left>
												<Label text="Default client" BorderPane.alignment="CENTER_LEFT">
													<padding>
														<Insets right="4.0"/>
													</padding>
												</Label>
											</left>
										</BorderPane>
										<Separator orientation="VERTICAL" prefHeight="35.0" prefWidth="0.0" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
									</children>
								</GridPane>
							</children>
						</GridPane>
					</items>
				</SplitPane>
			</content>
		</ScrollPane>
	</center>
</BorderPane>
